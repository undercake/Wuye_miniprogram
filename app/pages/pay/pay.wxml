<!--pages/news/news.wxml-->
<view>
    <checkbox-group bindchange="checkboxChange">
        <view style="margin: 10rpx 0;">
            <block wx:for="{{checkData}}" wx:for-index="idx" wx:for-item="itm">
                <view class="notice">{{idx}}年</view>
                <block wx:for="{{itm}}" wx:for-index="index" wx:for-item="item">

                    <view style="margin-top: 10rpx;background-color: #fff;padding:15rpx 0">
                        <view class="dsp_flex">
                            <view class="dsp_flex flex_cell_4">
                                <checkbox class="dsp_flex middle" value="{{idx+'_'+item.chargeId}}" checked="{{item.checked}}">{{item.name}}</checkbox>
                            </view>
                            <view class="dsp_flex flex_col flex_cell_2">
                                <view>￥{{item.charge}}</view>
                                <view>
                                    <navigator url="/pages/detail/detail?from=charge&detail={{item.chargeId}}"><text>费用明细</text></navigator>
                                </view>
                            </view>
                        </view>
                    </view>
                </block>
            </block>
        </view>
    </checkbox-group>
    <view class="sumit">
        <view class="dsp_flex flex_row">
            <view class="flex_cell_3 middle dsp_flex">
                <text>应付金额：{{SumPay}}元</text>
            </view>
            <view class="flex_cell_1 middle dsp_flex">
                <navigator url="/pages/pay/pay?id=">
                    <text>立即缴费</text>
                </navigator>
            </view>
        </view>
    </view>
</view>
